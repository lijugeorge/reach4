{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/*"],
      "@salesonepro/*": ["app/salesonepro/*"],
      "@core/*": ["app/reach/*"],
      "@theme/*": ["app/theme/*"],
      "@shared/*": ["app/shared/*"]
    },
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  }
}
